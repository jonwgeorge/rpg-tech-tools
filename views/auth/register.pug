extends ../layout

block variables
  - var title = "Register"

block content
  h2.text-center Register

  if errors
    .alert.alert-danger
      for error in errors
        div `${error.msg}` for `${error.param}`

  .row
    .col-sm-12
      form(method="POST" action="/auth/register")
        div.form-group
          label(for="email") Email:
          input#email.form-control(type="text", placeholder="example@example.com", name="email")
        div.form-group
          label(for="username") Username:
          input#username.form-control(type="text", name="username")
        div.form-group
          label(for="password") Password:
          input#password.form-control(type="password", name="password")
        button.btn.btn-primary(type='submit' style="width:100%") Sign Up
      div
        a(href="/auth/login")
          button.btn(style="width:100%") Already have an account?